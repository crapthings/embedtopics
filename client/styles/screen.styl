$lightColor = #efefef
$fontColor = #666

body
	font-size 14px
	color $fontColor
	background-color $lightColor

a
	text-decoration none
	color $fontColor

input
button
textarea
	width 100%
	padding 8px

.ui-module
	background-color white
	border 1px solid $lightColor - 5%

.ui-header

	& a
		padding 0 16px
